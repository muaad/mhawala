        %a.navbar-btn.sidebar-toggle{"data-target" => "#atas", "data-toggle" => "offcanvas", :href => "#", :role => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

.row
  .col-lg-12
    %section.panel
      = form_for @currency do |f|
        .panel-body
          - if @currency.errors.any?
            #error_explanation
              %h2= "#{pluralize(@currency.errors.count, "error")} prohibited this currency from being saved:"
              %ul
                - @currency.errors.full_messages.each do |msg|
                  %li= msg
          .form-group
            %lable Name
            = f.text_field :name, class: "form-control"
          .form-group
            %lable Short Name
            = f.text_field :short_name, class: "form-control"
          .form-group
            %lable Country
            %select.form-control{name: "currency[country]"}
              - ['USA', 'UK', 'Europe', 'Kenya', 'Somalia', 'Ethiopia'].each do |country|
                %option{value: country}
                  = country
          .form-group
            %lable Symbol
            %select.form-control{name: "currency[symbol]"}
              - {dollar: '$', pound: 'Â£', euro: 'â‚¬', 'Kenya Shilling' => 'KSH', 'Somali Shilling' => 'SSH', 'Ethiopian Bir' => 'EBIR'}.each do |currency, symbol|
                %option{value: symbol}
                  = "#{symbol} - #{currency}"
        .panel-footer
          .actions.pull-right
            %button.btn.btn-primary.btn-rounded{"data-original-title" => "", :title => "", :type => "submit"}
              %i.fa.fa-save
              Save
= form_for @currency do |f|
  - if @currency.errors.any?
    #error_explanation
      %h2= "#{pluralize(@currency.errors.count, "error")} prohibited this currency from being saved:"
      %ul
        - @currency.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :symbol
    = f.text_field :symbol
  .actions
    = f.submit 'Save'
